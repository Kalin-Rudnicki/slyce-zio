
@start: Json
@lookAhead: 2

Json ^ JsonNull
     | JsonBoolean
     | JsonString
     | JsonInt
     | JsonDouble
     | JsonArray
     | JsonObject
     ;

JsonNull ^ "null" ;
JsonBoolean ^ "true" | "false" ;
JsonString : "\"" StrElem* "\"" ;
JsonInt : int ;
JsonDouble : double ;
JsonArray : "[" "]"
          | "[" (Json . "," ^Json)+ ","? "]"
          ;
JsonObject : "{" "}"
           | "{" (KeyPair . "," ^KeyPair)+ ","? "}"
           ;

StrElem ^ char | escChar ;
KeyPair : JsonString ":" Json ;
